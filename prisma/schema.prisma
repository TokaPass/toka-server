// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @unique
  username   String  @unique
  hashedPass String
  logins     Login[]
}

model Login {
  id       String  @id @unique
  username String
  pass     String
  url      String
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?
}
